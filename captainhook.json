{
  "pre-commit": {
    "enabled": true,
    "actions": [
      {
        "action": "php ./vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix --verbose --dry-run"
      },
      {
        "action": "php ./vendor/phpstan/phpstan/bin/phpstan analyse -l 7 -c phpstan.neon ."
      },
      {
        "action": "php ./vendor/phpmd/phpmd/src/bin/phpmd Annotation,DependencyInjection,Describer,DtoMapper,EventListener,Exception,Handler,Service,Serializer,ShoppingApiTKDtoMapperBundle.php text ruleset.xml"
      }
    ]
  }
}
